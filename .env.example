# PUBG API Key
PUBG_API_KEY=여기에_PUBG_API_KEY_입력
# 서버 포트
PORT=4000
# 캐시 TTL(ms)
CACHE_TTL_MS=60000
# 기본 최근 매치 수 (최대 50)
MATCH_LIMIT=50

# (선택) 서버가 클라이언트 요청의 limit 상한을 강제로 제한
# 미설정 시 무제한(서비스 코드에서 null로 간주)
MAX_MATCH_LIMIT=50

# (선택) 텔레메트리 기반 무기별 딜량 집계 사용 여부
# 'false' 로 설정하면 비활성화
ENABLE_TELEMETRY=true

# (선택) 텔레메트리를 파싱할 최대 매치 수
TELEMETRY_LIMIT=8

# (선택) PUBG API 호출 레이트리밋 대응
# 429/5xx 백오프 재시도 최대 횟수
RETRY_MAX=3
# 최초 백오프(ms). 지수 백오프 + 지터 적용
RETRY_BASE_MS=400
# 매치 상세 동시 요청 개수 제한
MATCH_FETCH_CONCURRENCY=3
